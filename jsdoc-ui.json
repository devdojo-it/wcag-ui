{
  "source": {
    "include": ["packages/ui"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "__tests__|dist"
  },
  "tags": {
    "allowUnknownTags": true
  },
  "opts": {
    "destination": "./docs-ui",
    "encoding": "utf8",
    "readme": "./README.md",
    "recurse": true,
    "verbose": true
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
