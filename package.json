{
  "name": "wcag-ui",
  "version": "0.0.14",
  "description": "wcagUI Library",
  "repository": "git@github.com:devdojo-it/wcag-ui.git",
  "author": "DevDojo IT (https://devdojo.it), Exeen (https://exeen.it)",
  "contributors": [
    "Emiliano Pisu <pixu1980@github>",
    "Massimo Artizzu <maxart2501@github>",
    "Mirela Rosca <mirirosca@github>",
    "Alessio Tortolini <alestormoody@github>",
    "Christian Nastasi <cnastasi@github>",
    "Salvatore Tropea <salvotropea96@github>"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "commitlint": "commitlint --from HEAD~1",
    "clear:cache": "rm -rf .parcel-cache dist",
    "clear": "yarn clear:cache && rm -rf node_modules yarn.lock package-lock.json",
    "reset": "yarn clear && yarn",
    "test": "lerna run test",
    "prestart": "yarn clear:cache && yarn build:css",
    "start": "parcel ./src/index.html",
    "prebuild": "yarn clear:cache && yarn build:css",
    "build:css": "lerna run build:css",
    "build": "parcel build ./src/index.html --no-source-maps --public-url ./",
    "deps": "yarn reset && yarn upgrade-interactive --latest",
    "changelog": "changelog -t $(git log --grep='rel(' --format='%H' --max-count=2 | head -n 2 | tail -1)..$(git log --grep='rel(' --format='%H' --max-count=2 | head -n 1) -x rel,build && git add . && git commit --amend --no-edit",
    "rel:major": "yarn build && lerna publish major -y --no-git-tag-version && yarn deps && yarn version --major && yarn changelog",
    "rel:minor": "yarn build && lerna publish minor -y --no-git-tag-version && yarn deps && yarn version --minor && yarn changelog",
    "rel:patch": "yarn build && lerna publish patch -y --no-git-tag-version && yarn deps && yarn version --patch && yarn changelog"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "dependencies": {
    "@wcag-ui/accordion": "0.0.1",
    "@wcag-ui/button": "0.0.1",
    "@wcag-ui/checkbox": "0.0.1",
    "@wcag-ui/core": "0.0.1",
    "@wcag-ui/details": "0.0.1",
    "@wcag-ui/foundations": "0.0.1",
    "@wcag-ui/grid-system": "0.0.1",
    "@wcag-ui/iconography": "0.0.1",
    "@wcag-ui/input": "0.0.1",
    "@wcag-ui/radio": "0.0.1",
    "@wcag-ui/scroll-spy": "0.0.1",
    "@wcag-ui/switch": "0.0.1",
    "@wcag-ui/typography": "0.0.1",
    "highlight.js": "11.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "generate-changelog": "1.8.0",
    "husky": "^9.1.7",
    "jsdoc": "4.0.4",
    "lerna": "8.2.2",
    "lightningcss": "1.30.1",
    "lightningcss-cli": "1.30.1",
    "parcel": "2.15.2",
    "posthtml": "0.16.6",
    "posthtml-extend": "0.6.5",
    "posthtml-highlight": "3.0.0",
    "posthtml-include": "2.0.1",
    "posthtml-markdownit": "3.1.1",
    "realfavicon": "0.4.18",
    "svgo": "3.3.2",
    "yarn": "1.22.22"
  }
}
